datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Bubble {
  id          Int                  @id @default(autoincrement())
  createdAt   DateTime             @default(now())
  title       String
  description String
  content     String
  author      User?                @relation(fields: [authorId], references: [id])
  authorId    Int?
  labels      Label[]
  champions   ChampionsOnBubbles[]
  comments    Comment[]
  likes       Like[]
}

model User {
  id                  Int                  @id @default(autoincrement())
  email               String               @unique
  name                String?
  avatarUrl           String
  bubbles             Bubble[]
  Comment             Comment[]
  Like                Like[]
  bubblesChampionShip ChampionsOnBubbles[]
}

model ChampionsOnBubbles {
  champion   User     @relation(fields: [championId], references: [id])
  championId Int
  bubble     Bubble   @relation(fields: [bubbleId], references: [id])
  bubbleId   Int // relation scalar field (used in the `@relation` attribute above)
  assignedAt DateTime @default(now())
  assignedBy String

  @@id([championId, bubbleId])
}

model Label {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  Bubbles     Bubble[]
  color       String   @default("#b36fd8")
  isState     Boolean  @default(false)
  stateIndex  Int?
}

model Comment {
  id        Int      @id @default(autoincrement())
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  Int?
  content   String
  createdAt DateTime @default(now())
  bubble    Bubble   @relation(fields: [bubbleId], references: [id])
  bubbleId  Int
}

